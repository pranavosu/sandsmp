{
  "name": "sands",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm run build:wasm && next dev",
    "build:wasm": "wasm-pack build --target web crates/simulation && cp crates/simulation/pkg/simulation_bg.wasm public/simulation_bg.wasm && cp crates/simulation/pkg/simulation.js public/simulation.js",
    "build": "next build",
    "build:full": "npm run build:wasm && next build",
    "start": "next start",
    "lint": "eslint",
    "test:e2e": "npx playwright test",
    "test:e2e:headless": "npx playwright test --headed=false",
    "verify": "cargo check && cargo test && npx tsc --noEmit && npx eslint && npx vitest --run"
  },
  "dependencies": {
    "next": "16.1.6",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@webgpu/types": "^0.1.69",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "fast-check": "^4.5.3",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^4.0.18"
  }
}
